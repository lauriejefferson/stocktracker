<%= form_with url: "/", method: :post do |form|  %>
<div class="row">
<div class="col-sm-10 pe-0">
<%= form.text_field :ticker, placeholder: "Enter ticker symbol", size: 50, class: "form-control" %>
</div>
<div class="col-sm-2 ps-0">
<%= form.submit "Search", class: "btn btn-primary" %>
</div>
</div>
<% end %>